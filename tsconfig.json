{
	"compilerOptions": {
		"target": "ES2020",
		"module": "commonjs",
		"declaration": true,
		"outDir": "dist",
		"strict": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"strictPropertyInitialization": false,
		"lib": [
			"ESNext"
		],
		"resolveJsonModule": true,
		"typeRoots": [
			"./src/@types"
		]
	},
	"exclude": [
		"node_modules",
		"dist"
	]
}



