{
	"compilerOptions": {
		"target": "ES2020",
		"module": "commonjs",
		"declaration": true,
		"outDir": "./",
		"strict": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"strictPropertyInitialization": false,
		"lib": [
			"ESNext"
		],
		"resolveJsonModule": true,
		"typeRoots": [
			"./src/@types"
		],
		"baseUrl": "./",
		"paths": {
			"@src/*": [
				"src/*"
			]
		}
	},
	"include": ["./src/**/*"],
	"exclude": [
		"node_modules"
	]
}



