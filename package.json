{
	"name": "@affinity-lab/graphane",
	"version": "0.0.6",
	"author": "Affinity Lab",
	"scripts": {
		"rebuild": "find . -type d -depth 1 ! -name \"@*\" ! -name \".*\" ! -name \"node_modules\" -exec rm -r {} \\; & tsc",
		"idev": "cp package.json temp.json && cp package.dev.json package.json && npm install && rm -rf package.json && cp temp.json package.json && rm -rf temp.json"
	},
	"files": [
		"./**/*"
	],
	"eslintConfig": {
		"parserOptions": {
			"sourceType": "module"
		},
		"rules": {
			"no-extra-semi": "error"
		}
	},
	"prettier": {
		"semi": false,
		"useTabs": true,
		"printWidth": 1000
	},
	"dependencies": {
		"@apollo/server": "^4.9.1",
		"argon2": "^0.31.0",
		"micromatch": "^4.0.5",
		"mime-types": "^2.1.35",
		"sanitize-html": "^2.11.0",
		"class-validator": "^0.14.0",
		"express-fileupload": "^1.4.0",
		"graphql-type-json": "^0.3.2",
		"jsonwebtoken": "^9.0.1",
		"rotating-file-stream": "^3.1.1",
		"sharp": "^0.32.5",
		"ini": "^4.1.1",
		"snake-case": "^3.0.4",
		"type-graphql": "2.0.0-beta.2",
		"type-graphql-dataloader": "github:affinity-lab/type-graphql-dataloader",
		"typeorm": "^0.3.17"
	},
	"devDependencies": {
		"@types/jsonwebtoken": "^9.0.2",
		"@types/micromatch": "^4.0.2",
		"@types/mime-types": "^2.1.1",
		"@types/sanitize-html": "^2.9.0",
		"@types/ini": "^1.3.31",
		"typescript": "^5.1.6"
	}
}

